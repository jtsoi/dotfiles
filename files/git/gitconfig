[user]
        name = {{ git.user }}
        email = {{ git.email }}


[alias]
        co = checkout
        st = status -sb
        lg = log --graph --pretty=format:'%C(yellow)%h%C(auto)%d%Creset %s %C(white)- %an, %ar%Creset'

[color]
        branch = auto
        diff = auto
        interactive = auto
        pager = true
        status = auto
        ui = true

[color "status"]
        added = green
        changed = yellow
        untracked = red
